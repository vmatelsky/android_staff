<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LightText" parent="android:Widget.DeviceDefault.TextView">
        <item name="android:textColor">#fff</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="ContentLight" parent="LightText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ControlButton" parent="android:Widget.DeviceDefault.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_controls_circle_selector</item>
    </style>

    <style name="ContentLightBold" parent="LightText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>