<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/root"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/notification_background">

    <com.clearchannel.iheartradio.controller.view.ImageByDataPathView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View android:id="@+id/background_tint"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/semi_transparent_bg" />

    <FrameLayout
        android:id="@+id/is_paused_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/is_paused_notification_action" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/is_playing_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/is_playing_notification_action" />

    </FrameLayout>

</FrameLayout>
