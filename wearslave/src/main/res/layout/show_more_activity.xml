<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <com.clearchannel.iheartradio.controller.view.ImageByDataPathView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/icon_top_padding">

        <ImageView
            android:id="@+id/icon_show_more"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/background_bigaction"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher" />

        <TextView style="@style/ContentLight"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingTop="3dp"
                  android:text="@string/show_more_title" />
    </LinearLayout>

</FrameLayout>